//CREACION DE TABLA////
create table empleado(
id_empleado int not null,
nombre varchar2 (20),
direccion varchar2(50),
id_documento varchar2(10),
sueldo nomber(6,2)// es de 6cifras con dos decimales,
fecha_nacimiento date
);


